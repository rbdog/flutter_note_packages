{
  // フォーマット・保存
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Flutter
  "dart.flutterSdkPath": "$Home/dev/flutter",
  "dart.debugExternalPackageLibraries": false,
  "dart.debugSdkLibraries": false,
  "[dart]": {
    "editor.rulers": [0],
    "editor.defaultFormatter": "Dart-Code.dart-code",
    "editor.formatOnSave": true
  },
  "files.exclude": {
    "**/.dart_tool": true,
    "**/build": true,
    "**/web": true,
    "**/.metadata": true,
    "**/.gitignore": true,
    "**/.packages": true,
    "**/pubspec.lock": true,
    "**/.flutter-plugins": true,
    "**/.flutter-plugins-dependencies": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "**/**.freezed.dart": true,
    "**/**.g.dart": true,
    "**/generated_plugin_registrant.dart": true,
    "**/.gitattributes": true,
    "**/**.iml": true,
    "**/LICENSE": true,
    "**/.idea": true,
    "**/android": true,
    "**/ios": true,
    "**/windows": true,
    ".firebase/**": true
  }
}
